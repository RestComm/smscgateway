<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>resource-adaptors-parent</artifactId>
		<groupId>org.mobicents.smsc</groupId>
		<version>3.0.7</version>
	</parent>

	<artifactId>smsc-resource-adaptors-du</artifactId>
	<name>Core : SLEE : SMSC Resource Adaptors DU</name>

	<dependencies>
	    <!-- common -->
	    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>common-library</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<!-- RAs -->
		<!-- Hector Client -->
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>persistence-ra-library</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>persistence-ratype</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>persistence-ra</artifactId>
			<version>${pom.version}</version>
		</dependency> 
		<!-- Scheduler --> 
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>scheduler-ra-library</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>scheduler-ra-events</artifactId>
			<version>${pom.version}</version>
		</dependency>		
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>scheduler-ratype</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>scheduler-ra</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<!-- SMPP -->
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>smpp-server-ra-library</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>smpp-server-ra-events</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>smpp-server-ra-ratype</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>smpp-server-ra-ra</artifactId>
			<version>${pom.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.mobicents.tools</groupId>
				<artifactId>maven-du-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>copy-dependencies</goal>
							<goal>generate-descriptor</goal>
							<goal>generate-ant-management-script</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>deploy-DU</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<copy overwrite="true" file="target/${project.build.finalName}.jar" todir="${jboss.home}/server/${node}/deploy" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>undeploy-DU</id>
						<phase>clean</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete file="${jboss.home}/server/${node}/deploy/${project.build.finalName}.jar" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
